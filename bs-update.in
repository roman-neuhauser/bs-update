#!/bin/sh
# vim: fdm=marker cms=\ #\ %s

set -o errexit
set -o nounset
set -o posix

usage() # {{{
{
  local self=$(basename "$0") exit=${1?} fd=1
  test $exit -ne 0 && fd=2
  {
    printf "Usage: $self {-h|[options] <tag>}\n"
    if test $exit -ne 0; then
      printf "Use \"$self -h\" to see the full option listing.\n"
    else
      printf "  Options:\n"
      printf "    %-16s  %s\n" \
        "-h"              "Display this message" \
        "-A BSAPI"        "Use Build Service at BSAPI (URL or alias)" \
        "-p PROJECT"      "Update Build Service package of PROJECT"
    fi
  } >&$fd
  exit $exit
} # }}}

expand() # {{{
{
  set -eu
  local prev='' result="${1?}"
  while test "$result" != "$prev"; do
    prev="$result"
    result="$(eval echo "$result")"
  done
  echo "$result"
} # }}}

if test $# -lt 1; then
  usage 1
fi

bs_apiurl=
package=
bs_project=
dloadurl=

if test -f .bs-update; then
  . $PWD/.bs-update
fi

while getopts A:hp: optname; do
  case $optname in
  A) bs_apiurl=$OPTARG ;;
  h) usage 0 ;;
  p) bs_project=$OPTARG ;;
  ?) usage 1 ;;
  esac
done
shift $(($OPTIND - 1))

tag=$1

bs_apiurl="$(expand \"$bs_apiurl\")"
bs_project="$(expand \"$bs_project\")"
dloadurl="$(expand \"$dloadurl\")"

test -n "$package" || usage 1
test -n "$bs_project" || usage 1
test -n "$dloadurl" || usage 1

pkgdir=$bs_project/$package
specfile=$package.spec
version=${tag#v}
tarball=$package-$version.tar.gz

osc() # {{{
{
  set -eu
  command osc ${bs_apiurl:+-A "$bs_apiurl"} ${1+"$@"}
} # }}}
fetch() # {{{
{
  set -eu
  local url=${1?} tarball=${2?}
  wget -qO $tarball $url
} # }}}
repack() # {{{
{
  set -eu
  local tarball=${1?}
  local dir=${tarball%.tar.gz}
  mkdir $dir
  tar -xzf $tarball --strip-components=1 -C $dir
  tar -czf $tarball $dir
  rm -rf $dir
} # }}}
extract() # {{{
{
  set -eu
  local tarball=${1?}
  local file=${tarball%.tar.gz}/${2?}
  tar -xzf $tarball --strip-components=1 $file
} # }}}
update() # {{{
{
  set -eu
  case $1 in
  *.spec)  update_specfile "$@" ;;
  *.tar.*) update_tarball "$@" ;;
  esac
} # }}}
update_specfile() # {{{
{
  set -eu
  local specfile=${1?} version=${2?}
  sed -r '/^Version:/s/__VERSION__/'$version'/' $specfile.in > $specfile
  if osc st $specfile | grep -q '^?'; then
    osc add $specfile
  fi
} # }}}
update_tarball() # {{{
{
  set -eu
  local tarball=${1?} rewrite=0
  if test -f $pkgdir/$tarball; then
    rewrite=1
  fi
  if test 0 -eq $rewrite && test -f $pkgdir/$package-*.tar.gz; then
    osc rm $pkgdir/$package-*.tar.gz
  fi
  mv $tarball $pkgdir
  if test 0 -eq $rewrite; then
    osc add $pkgdir/$tarball
  fi
} # }}}
exithook() # {{{
{
  set -eu
  rm -rf $root
} # }}}

trap exithook EXIT
root=$(mktemp -d)
echo "$0: root=$root"
cd $root
osc co $pkgdir
fetch $dloadurl $tarball
repack $tarball
update $tarball
cd $pkgdir
extract $tarball $specfile.in
update $specfile $version
#osc build
osc ci
